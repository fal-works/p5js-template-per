{
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    // basic recommended rules
    "eslint:recommended",

    // overwrite config for p5.js
    "@fal-works/p5js",

    // turn off rules that might conflict with prettier
    "prettier"
  ],
  "rules": {
    "lines-around-comment": "error"
  },

  "overrides": [
    {
      "files": ["rollup.config.js"],
      "env": {
        "node": true,
        "browser": false
      }
    }
  ]
}
